<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context="pornnatcha.easywallet.MainActivity">


    <ListView
        android:id="@+id/list_view"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <LinearLayout
        android:id="@+id/insert_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/mIncome_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="325dp"
            android:text="บันทึกรายรับ"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/mExpense_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="บันทึกรายจ่าย"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:layout_alignBaseline="@+id/mIncome_button"
            android:layout_alignBottom="@+id/mIncome_button"
            android:layout_toRightOf="@+id/mIncome_button"
            android:layout_toEndOf="@+id/mIncome_button" />

    </LinearLayout>






</RelativeLayout>
